{% extends 'base.jinja' %}


{% block title %}Users{% endblock %}


{% block content %}

    <article>

        <header>
            <h1>All the Users</h1>
        </header>

        {% if users %}

            <ul>

            {% for user in users %}
                <li>
                    <a href="/user/{{ user['id'] }}">
                        {{ user['name'] }}
                    </a>
                </li>
            {% endfor %}

            </ul>

        {% else %}

            <p>No users, yet!</p>

        {% endif %}

    </article>

{% endblock %}

