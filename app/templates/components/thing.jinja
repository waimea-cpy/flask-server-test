<li class="thing-details">
    {% if name %}
        <h4>{{ name }}</h4>
    {% endif %}

    {% if image %}
        <img
            src="/uploads/{{ image }}"
            alt="Image of {{ name }}"
        >
    {% endif %}

    {% if owner_name %}
        <small>Owned by {{ owner_name }}</small>
    {% endif %}

    {% if session['id'] and owner == session['id'] %}
        <button
            hx-delete="/things/{{ id }}"
            class="delete"
            data-tooltip="Delete this thing"
            hx-confirm="Really delete this thing?"
        >Ã—</button>
    {% endif %}
</li>
