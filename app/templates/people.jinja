{% extends 'base.jinja' %}

{% block content %}

    <h1>{{ title }}</h1>

    <article>

        <ul>

        {% for person in people %}
            <li>
                <a href="/person/{{ person['id'] }}">
                    {{ person['name'] }}
                </a>
            </li>
        {% endfor %}

        </ul>

    </article>

    <article>
        <form action="/person/new" method="post">

            <label>Name</label>
            <input name="name" type="text" required>

            <input type="submit" value="Add Person">

        </form>
    </article>

{% endblock %}

