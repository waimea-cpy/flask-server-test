{% extends 'base.jinja' %}


{% block title %}Things{% endblock %}


{% block content %}

    <h1>All the Things</h1>

    <article>

        {% if things %}

            <ul>

            {% for thing in things %}
                <li><strong>{{ thing['t_name'] }}</strong> (owned by {{ thing['u_name'] }})</li>
            {% endfor %}

            </ul>

        {% else %}

            <p>No things, yet!</p>

        {% endif %}

    </article>

    {% if session['username'] %}
        <article>
            <form action="/thing/new" method="post">

                <label>Name</label>
                <input name="name" type="text" required>

                <input name="owner" type="hidden" value="{{ session['id'] }}">

                <input type="submit" value="Add Thing">

            </form>
        </article>
    {% endif %}

{% endblock %}

